<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="userEntity"
            type="com.assingment.data.local.entities.UserEntity" />

        <variable
            name="handler"
            type="com.assingment.listeners.CallBackHandler" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_4sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ivUserProfile"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:contentDescription="@{null}"
                android:layout_margin="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvUserName"/>

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@{@string/username(userEntity.name.title, userEntity.name.first, userEntity.name.last)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivUserProfile"
                app:layout_constraintBottom_toTopOf="@+id/tvUserAddress"/>

            <TextView
                android:id="@+id/tvUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightBlack"
                android:alpha="0.7"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@{@string/address(userEntity.location.street.number, userEntity.location.coordinates.latitude, userEntity.location.coordinates.longitude, userEntity.location.state, userEntity.location.country)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                app:layout_constraintBottom_toTopOf="@+id/tvUserStatus"/>

            <TextView
                android:id="@+id/tvUserStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:text="@{userEntity.status}"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:visibility="@{userEntity.status.length() > 0 ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUserAddress"
                app:layout_constraintBottom_toTopOf="@+id/tvDecline" />

            <TextView
                android:id="@+id/tvDecline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/decline"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorGrey"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:onClick="@{() -> handler.onDeclineButtonCallBack()}"
                android:visibility="@{userEntity.status.length() > 0 ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvAccept"
                app:layout_constraintTop_toBottomOf="@+id/tvUserStatus"
                app:layout_constraintBottom_toBottomOf="parent"
                app:drawableTopCompat="@drawable/ic_cancel" />

            <TextView
                android:id="@+id/tvAccept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/accept"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/colorGrey"
                android:gravity="center"
                android:onClick="@{() -> handler.onAcceptButtonCallBack()}"
                android:visibility="@{userEntity.status.length() > 0 ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toEndOf="@+id/tvDecline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvDecline"
                app:layout_constraintBottom_toBottomOf="@+id/tvDecline"
                app:drawableTopCompat="@drawable/ic_check" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>